{
  "info": {
    "name": "Ride State Backend - Collection",
    "_postman_id": "d3f1e6a0-0000-4000-8000-000000000000",
    "description": "Postman collection for testing the Ride State Backend (BackEnd). Uses environment variables: baseUrl, token, rideId.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"driverId\": \"d1\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/login", "host": ["{{baseUrl}}"], "path": ["login"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const body = pm.response.json();",
              "if (body && body.token) {",
              "  pm.environment.set('token', body.token);",
              "  console.log('Saved token to environment variable `token`.');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Requested Rides",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides?status=requested", "host": ["{{baseUrl}}"], "path": ["rides"], "query": [{ "key": "status", "value": "requested" }] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const arr = pm.response.json();",
              "if (Array.isArray(arr) && arr.length > 0) {",
              "  pm.environment.set('rideId', arr[0].id);",
              "  console.log('Set rideId to first requested ride:', arr[0].id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Rides (debug)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/__all_rides", "host": ["{{baseUrl}}"], "path": ["__all_rides"] }
      }
    },
    {
      "name": "Create Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"passengerName\": \"Alice\",\n  \"pickup\": { \"lat\": 12.34, \"lng\": 56.78 },\n  \"dropoff\": { \"lat\": 98.76, \"lng\": 54.32 },\n  \"notes\": \"fragile\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/rides", "host": ["{{baseUrl}}"], "path": ["rides"] }
      }
    },
    {
      "name": "Get Ride by Id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}"] }
      }
    },
    {
      "name": "Accept Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}/accept", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}", "accept"] }
      }
    },
    {
      "name": "Start Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}/start", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}", "start"] }
      }
    },
    {
      "name": "Complete Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}/complete", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}", "complete"] }
      }
    },
    {
      "name": "Cancel Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}/cancel", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}", "cancel"] }
      }
    },
    {
      "name": "Post Location",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lat\": 12.34,\n  \"lng\": 56.78,\n  \"ts\": 0\n}"
        },
        "url": { "raw": "{{baseUrl}}/rides/{{rideId}}/location", "host": ["{{baseUrl}}"], "path": ["rides", "{{rideId}}", "location"] }
      }
    },
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "rideId", "value": "" }
  ]
}
